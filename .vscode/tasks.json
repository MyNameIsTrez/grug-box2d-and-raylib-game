{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rebuild and run",
      "command": "make",
      "type": "shell",
      "args": [
        "-C",
        "build"
      ],
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    },
    {
      "label": "Generate Makefile",
      "command": "mkdir build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && cd ..",
      "type": "shell",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    }
  ]
}
