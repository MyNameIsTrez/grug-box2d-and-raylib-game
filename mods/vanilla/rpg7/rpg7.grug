define() gun {
    return {
        .name = "RPG-7",
        .rounds_per_minute = 200,
        .full_auto = false,
    }
}

on_fire(self: i32) {
    # TODO: Add +4 back to x
    x: f32 = get_muzzle_x(self)
    y: f32 = get_muzzle_y(self)
    angle: f32 = get_angle(self)
    velocity: f32 = rand(0.0, 2.0) - rand(0.0, 2.0) + 3.0

    spawn_bullet("rpg", x, y, angle, velocity)
}
