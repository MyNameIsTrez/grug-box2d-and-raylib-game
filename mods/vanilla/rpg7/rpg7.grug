define() gun {
    return {
        .name = "RPG-7",
        .rate_of_fire = 200,
        .full_auto = true,
    }
}

on_fire(self: i32) {
    x: f32 = get_muzzle_x(self) + 4
    y: f32 = get_muzzle_y(self)
    angle: f32 = get_angle(self)
    velocity: f32 = 10

    spawn_bullet("rpg", x, y, angle, velocity)
}
